<?xml version="1.0"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
  <specVersion>
    <major>1</major>
    <minor>0</minor>
  </specVersion>

  <actionList>
    <action><name>VolumeUp</name><argumentList></argumentList></action>
    <action><name>VolumeDown</name><argumentList></argumentList></action>
    <action><name>Reconnect</name><argumentList></argumentList></action>
    <action><name>Mute</name><argumentList></argumentList></action>
    <action><name>UnMute</name><argumentList></argumentList></action>
    <action><name>ToggleMute</name><argumentList></argumentList></action>
    <action><name>inDVD</name><argumentList></argumentList></action>
    <action><name>inBD</name><argumentList></argumentList></action>
    <action><name>inTVSAT</name><argumentList></argumentList></action>
    <action><name>inSATCBL</name><argumentList></argumentList></action>
    <action><name>inDVRBDR</name><argumentList></argumentList></action>
    <action><name>inVideo1</name><argumentList></argumentList></action>
    <action><name>inVideo2</name><argumentList></argumentList></action>
    <action><name>inHDMI1</name><argumentList></argumentList></action>
    <action><name>inHDMI2</name><argumentList></argumentList></action>
    <action><name>inHDMI3</name><argumentList></argumentList></action>
    <action><name>inHDMI4</name><argumentList></argumentList></action>
    <action><name>inHDMI5</name><argumentList></argumentList></action>
    <action><name>inInternet</name><argumentList></argumentList></action>
    <action><name>inIpodUSB</name><argumentList></argumentList></action>
    <action><name>inXMRadio</name><argumentList></argumentList></action>
    <action><name>inCD</name><argumentList></argumentList></action>
    <action><name>inCDRTape</name><argumentList></argumentList></action>
    <action><name>inTuner</name><argumentList></argumentList></action>
    <action><name>inPhono</name><argumentList></argumentList></action>
    <action><name>SetVolumeTarget</name>
		<argumentList>
			<argument>
     			<name>newTargetValue</name>
     			<direction>in</direction>
   				<relatedStateVariable>Volume</relatedStateVariable>
    		</argument>
 		 </argumentList>
    </action>
  </actionList>
  <serviceStateTable>
	<stateVariable sendEvents="yes">
		<name>MainInput</name>
		<dataType>string</dataType>
		<shortCode>maininput</shortCode>
		<defaultValue>HDMI1</defaultValue>
		<allowedValueList>
			<allowedValue>DVD</allowedValue>
			<allowedValue>BD</allowedValue>
			<allowedValue>TVSAT</allowedValue>
			<allowedValue>SATCBL</allowedValue>
			<allowedValue>DVRBDR</allowedValue>
			<allowedValue>Video1</allowedValue>
			<allowedValue>Video2</allowedValue>
			<allowedValue>HDMI1</allowedValue>
			<allowedValue>HDMI2</allowedValue>
			<allowedValue>HDMI3</allowedValue>
			<allowedValue>HDMI4</allowedValue>
			<allowedValue>HDMI5</allowedValue>
			<allowedValue>Internet</allowedValue>
			<allowedValue>IpodUSB</allowedValue>
			<allowedValue>XMRadio</allowedValue>
			<allowedValue>CD</allowedValue>
			<allowedValue>CDRTape</allowedValue>
			<allowedValue>Tuner</allowedValue>
			<allowedValue>Phono</allowedValue>
		</allowedValueList>
	</stateVariable>
	<stateVariable sendEvents="yes">
		<name>muteStatus</name>
		<dataType>string</dataType>
		<shortCode>muteStatus</shortCode>
		<defaultValue>Off</defaultValue>
		<allowedValueList>
			<allowedValue>Off</allowedValue>
			<allowedValue>On</allowedValue>
		</allowedValueList>	
	</stateVariable>
	<stateVariable>
		<name>currentVolumeDB</name>
		<sendEventsAttribute>yes</sendEventsAttribute>
		<dataType>string</dataType>
		<shortCode>currentVolumeDB</shortCode>
	</stateVariable>
	<stateVariable>
		<name>inputStatus</name>
		<sendEventsAttribute>yes</sendEventsAttribute>
		<dataType>string</dataType>
		<shortCode>inputStatus</shortCode>
	</stateVariable>
  </serviceStateTable>	
</scpd>

